    "#workbench\\.parts\\.activitybar": {
      "background-color": "#404040 !important",
    },

    // Sidebar
    //  - Re-style titlebars
    "#workbench\\.parts\\.sidebar > .title": {
      "background-color": "#404040",
    },
    "#workbench\\.parts\\.sidebar .pane-header": {
      "background-color": "#404040 !important",
      // "height": "16px !important", // Nope, position:absolute w/ top
