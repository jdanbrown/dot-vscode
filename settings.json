    ".explorer-folders-view .codicon-tree-item-expanded::before": {
      "font-size": "10px", // Make expand/collapse icons smaller than the surrounding font-size:11px
      "position": "absolute", // (Overridding position:static -- will this cause problems?)
      "top": "1px", // Center vertically
      "right": "6px", // Reduce gap from icon to text
