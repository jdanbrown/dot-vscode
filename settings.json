      "background-color": "#000",
      "border": "1px solid #fff",
      "stroke": "#fff",
      "opacity": "0.5",
    },
    //  - Databricks: Re-style outputs created by the databricks web UI / Databricks Power Tools extension
    //    - The output is totally different html than when created by the vscode notebook ðŸ¤·
    ".cell_container .output_container .output .ansiout": {
      "white-space": "pre",
      "font-family": "Consolas",
      "font-size": "11px",
      "line-height": "13px",
      "font-weight": "inherit",
      "color": "#fff",
    },
    ".cell_container .output_container .output .text-output code": {
      "background-color": "#000",
      "border-radius": "unset",
      "padding": "1px 0px",
    },
    ".cell_container .output_container .output .data-table form": {
      "height": "unset !important",
    },

  },

